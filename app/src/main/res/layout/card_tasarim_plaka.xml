<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_back_white10"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                >

                <TextView
                    android:id="@+id/textViewPlakaNo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="1"
                    android:background="@drawable/plaka_back_color10"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="13dp"
                    />

                <TextView
                    android:id="@+id/textViewPlakaAd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:background="@drawable/round_back_white10"
                    android:text="Adana"
                    android:fontFamily="@font/patrickhand"
                    android:textSize="23sp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textViewTelefon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefon Kodu: 32000"
                    android:background="@drawable/round_back_white10"
                    android:padding="6dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/patrickhand"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/textViewNufus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NÃ¼fus: 1243242"
                    android:background="@drawable/round_back_white10"
                    android:padding="6dp"
                    android:fontFamily="@font/patrickhand"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="13dp"/>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>